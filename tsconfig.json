{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "pinia": [
        "./packages/pinia/src/index.d.ts"
      ],
      "~/*": ["src/*"]
    },
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["vite/client", "@webgpu/types", "@types/jquery"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "@pixi/utils"],
  "exclude": ["node_modules", "build/**/*"]
}
